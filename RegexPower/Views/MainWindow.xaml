<Window x:Class="RegexPower.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="RegexPower"
        Height="590"
        Width="1069">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="263*"/>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="266*"/>
            <ColumnDefinition Width="487*"/>
        </Grid.ColumnDefinitions>
        
        <Rectangle Fill="#FF4D4DE2"
                   HorizontalAlignment="Left"
                   Height="679"
                   Width="187"
                   Stroke="Black"
                   VerticalAlignment="Top"
                   Margin="0,0,0,-119"/>
        <Label Content="RegexPower"
               HorizontalAlignment="Left"
               Margin="36,23,0,0"
               VerticalAlignment="Top"
               Foreground="#FFE4E4E4"
               Height="38"
               Width="111"
               FontSize="18"/>
        <RichTextBox HorizontalAlignment="Left"
                     AcceptsReturn="True"
                     Name="RawUserInput_RichTextBox"
                     Height="623"
                     Margin="187,56,0,-119"
                     VerticalAlignment="Top"
                     Width="875"
                     Grid.ColumnSpan="4"
                     Background="WhiteSmoke">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Content="Load File"
                HorizontalAlignment="Left"
                Margin="22,374,0,0"
                VerticalAlignment="Top"
                Width="142"
                Height="32"
                Click="LoadFile_Button_Click"/>
        <Button Content="Valid Email"
                HorizontalAlignment="Left"
                Margin="22,427,0,0"
                VerticalAlignment="Top"
                Width="142"
                Height="32"
                Click="ValidateEmail_Button_Click"/>
        <TextBox HorizontalAlignment="Left"
                 Name="ownPatter"
                 Height="33"
                 Margin="28,15,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="715"
                 TextChanged="RegexInput_TextBox_TextChanged"
                 Grid.Column="2"
                 Grid.ColumnSpan="2"/>
        <Label Content="Regular Expression:"
               HorizontalAlignment="Left"
               Margin="198,10,0,0"
               VerticalAlignment="Top"
               Foreground="#FFE4E4E4"
               Height="38"
               Width="111"
               FontSize="14"
               Grid.ColumnSpan="2"/>
    </Grid>
</Window>
